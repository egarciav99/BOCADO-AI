# Variables de entorno para tests E2E
# Estas variables se usan cuando se ejecutan los tests con Playwright

# Firebase - Configuración para entorno de test
# Usar el proyecto de Firebase de desarrollo/demo
VITE_FIREBASE_API_KEY=test-api-key
VITE_FIREBASE_AUTH_DOMAIN=localhost
VITE_FIREBASE_PROJECT_ID=demo-bocado-ai
VITE_FIREBASE_STORAGE_BUCKET=demo-bocado-ai.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# API Keys para servicios externos (usar mocks en tests)
VITE_GEMINI_API_KEY=test-gemini-key
VITE_SENTRY_DSN=

# Configuración de entorno
NODE_ENV=test
CI=false

# Configuración de Playwright
PLAYWRIGHT_TIMEOUT=60000
PLAYWRIGHT_EXPECT_TIMEOUT=10000
